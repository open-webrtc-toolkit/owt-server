        "package": "../package.json",
        "files": [
            "agent.toml",
            "log4js_configuration.json",
            "install_deps.sh",
            "configLoader.js",
            "../index.js",
            "../networkHelper.js",
            "../nodeManager.js",
            "../workingNode.js",
            "../log4cxx.properties",
            "../../common/amqp_client.js",
            "../../common/clusterWorker.js",
            "../../common/loadCollector.js",
            "../../common/logger.js",
            "../../common/makeRPC.js",
            "../../common/rpcChannel.js",
