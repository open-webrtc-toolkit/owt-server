{
    "name": "video-agent",
    "dest": "video_agent",
    "node": {
        "bin": "woogeen_video",
        "entry": "../erizoJS.js",
        "libpath": "video",
        "libfiles": [
            "index.js",
            "layout.js",
            "../connections.js",
            "../InternalConnectionFactory.js"
        ]
    },
    "common": {
        "package": "../package.json",
        "files": [
            "../AgentLoader.js",
            "agent.toml",
            "log4js_configuration.json",
            "init.sh",
            "install_deps.sh",
            "install_openh264.sh",
            "uninstall_openh264.sh",
            "../index.js",
            "../log4cxx.properties",
            "../../common/amqp_client.js",
            "../../common/cipher.js",
            "../../common/clusterWorker.js",
            "../../common/loadCollector.js",
            "../../common/logger.js",
            "../../common/makeRPC.js",
            "../../common/rpcChannel.js",
            "../../../scripts/release/initcert.js",
            "../../../scripts/detectOS.sh"
        ],
        "folders": {
            "avatars": [
                "avatars/*"
            ]
        }
    },
    "natives": {
        "libdist": "lib",
        "addons": [
            {
                "folder": "videoMixer/videoMixer_sw",
                "name": "videoMixer-sw"
            },
            {
                "folder": "videoTranscoder/videoTranscoder_sw",
                "name": "videoTranscoder-sw"
            },
            {
                "folder": "videoMixer/videoMixer_msdk",
                "name": "videoMixer-msdk"
            },
            {
                "folder": "videoTranscoder/videoTranscoder_msdk",
                "name": "videoTranscoder-msdk"
            },
            {
                "folder": "../addons/mediaFrameMulticaster",
                "name": "mediaFrameMulticaster"
            },
            {
                "folder": "../addons/internalIO",
                "name": "internalIO"
            },
            {
                "folder": "../addons/logger",
                "name": "logger"
            }
        ]
    },
    "start": "node . -U video"
}
